/* pages/profile/home/home.wxss */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
}

.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.profile-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  border-bottom: 10rpx solid #f7f8fa;
}

.avatar-container {
  margin-bottom: 20rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.info-text {
  margin-bottom: 30rpx;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.uid {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.phone {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.vip-card {
  background-color: #f7f8fa;
  padding: 20rpx;
  border-radius: 10rpx;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.vip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.vip-desc {
  font-size: 24rpx;
  color: #999;
}

.user-detail-card {
  background-color: #fff;
  padding: 30rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.p-30 {
  padding: 30rpx;
}

.bottom-actions {
  padding: 30rpx;
}
