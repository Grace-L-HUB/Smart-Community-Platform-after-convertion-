/* pages/profile/edit/edit.wxss */

.container {
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 头像部分 */
.avatar-section {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  margin: 0 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

/* 表单部分 */
.form-section {
  background: #fff;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  padding: 24rpx 24rpx 12rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 提交按钮 */
.submit-section {
  padding: 40rpx 24rpx 20rpx;
}

/* 表单字段自定义样式 */
.van-field {
  padding: 20rpx 24rpx !important;
}

.van-field__label {
  color: #333 !important;
  font-weight: 500 !important;
  width: 160rpx !important;
}

.van-field__value {
  color: #666 !important;
}

.van-field__placeholder {
  color: #c8c9cc !important;
}

/* 必填字段标识 */
.van-field--required .van-field__label::before {
  content: '*';
  color: #ff4757;
  margin-right: 8rpx;
}
