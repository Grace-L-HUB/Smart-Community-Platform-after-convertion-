.order-list {
  padding: 24rpx;
}

.order-card {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-type {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-main);
}

.order-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.order-title {
  font-size: 28rpx;
  color: var(--text-main);
}

.order-time {
  font-size: 24rpx;
  color: var(--text-gray);
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff4444;
}
