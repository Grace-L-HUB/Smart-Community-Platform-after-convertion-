.posts-list {
  padding: 24rpx;
}

.post-card {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: var(--shadow-sm);
}

.post-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  flex-shrink: 0;
}

.post-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.post-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-time {
  font-size: 24rpx;
  color: var(--text-gray);
}

.post-stats {
  display: flex;
  gap: 24rpx;
  margin-top: auto;
}

.stat-item {
  font-size: 24rpx;
  color: var(--text-gray);
}

.post-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  justify-content: center;
}
