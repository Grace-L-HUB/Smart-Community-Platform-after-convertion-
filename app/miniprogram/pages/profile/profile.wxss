/* pages/profile/profile.wxss */
.profile-header {
  background: var(--primary-gradient);
  padding: 40rpx 40rpx 120rpx; /* Extra bottom padding for overlap */
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.4);
  overflow: hidden;
  margin-right: 24rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-text {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.uid {
  font-size: 24rpx;
  opacity: 0.8;
}

.vip-card {
  background: linear-gradient(135deg, #333 0%, #434343 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  color: #f1c40f;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
}

.vip-title {
  font-size: 30rpx;
  font-weight: bold;
}

.vip-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(241, 196, 15, 0.7);
  margin-top: 10rpx;
}

.section-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
