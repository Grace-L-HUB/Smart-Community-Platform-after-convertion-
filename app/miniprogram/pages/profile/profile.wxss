/* pages/profile/profile.wxss */

/* 加载和错误状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.error-container {
  padding: 100rpx 40rpx;
}

.profile-header {
  background: var(--primary-gradient);
  padding: 40rpx 40rpx 120rpx; /* Extra bottom padding for overlap */
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.4);
  overflow: hidden;
  margin-right: 24rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-text {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.uid {
  font-size: 24rpx;
  opacity: 0.8;
}

.phone {
  font-size: 24rpx;
  opacity: 0.7;
  margin-top: 4rpx;
}

.vip-card {
  background: linear-gradient(135deg, #333 0%, #434343 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  color: #f1c40f;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
}

.vip-title {
  font-size: 30rpx;
  font-weight: bold;
}

.vip-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(241, 196, 15, 0.7);
  margin-top: 10rpx;
}

.section-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 用户详情卡片 */
.user-detail-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  margin: 20rpx 30rpx;
}

/* 底部操作 */
.bottom-actions {
  margin-bottom: 40rpx;
}

/* 头像可点击提示 */
.avatar-container {
  position: relative;
  cursor: pointer;
}

.avatar-container::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  border: 2rpx solid #fff;
}

/* 工具类样式 */
.mt-20 {
  margin-top: 20rpx;
}

.p-30 {
  padding: 30rpx;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
