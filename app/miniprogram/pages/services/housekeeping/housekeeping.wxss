.service-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}

.service-card {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: var(--shadow-sm);
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 50%;
}

.service-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-main);
}

.service-price {
  font-size: 22rpx;
  color: #07c160;
}

.form-section {
  margin: 0 24rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 20rpx;
  padding: 0 24rpx;
}

.submit-section {
  padding: 0 24rpx 40rpx;
}
