.container {
  background: #fff;
  min-height: 100vh;
  padding: 24rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.announcement-header {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.header-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.announcement-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.meta-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: var(--text-gray);
}

.announcement-content {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.8;
  margin-bottom: 32rpx;
}

.attachments-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: var(--radius-md);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 20rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.attachment-item:last-child {
  margin-bottom: 0;
}

.attachment-name {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-main);
}

.publisher-section {
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.publisher-label {
  font-size: 26rpx;
  color: var(--text-gray);
}

.publisher-name {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 600;
}
