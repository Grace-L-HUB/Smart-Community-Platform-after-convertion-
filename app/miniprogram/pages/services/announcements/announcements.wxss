.container {
  background: var(--bg-color);
  min-height: 100vh;
}

.search-section {
  background: #fff;
  padding: 20rpx 24rpx;
}

.announcement-list {
  padding: 24rpx;
}

.announcement-card {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s;
}

.announcement-card.is-top {
  border-left: 4rpx solid #ff4444;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.header-left {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.publish-time {
  font-size: 22rpx;
  color: var(--text-gray);
}

.announcement-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.announcement-summary {
  display: block;
  font-size: 26rpx;
  color: var(--text-gray);
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-text {
  font-size: 22rpx;
  color: var(--text-gray);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: var(--text-gray);
}

.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50vh;
}
