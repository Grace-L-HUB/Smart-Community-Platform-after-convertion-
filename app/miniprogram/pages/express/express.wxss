.express-list {
  padding: 24rpx;
}

.express-card {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.express-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.company-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}

.express-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.company-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.express-number {
  font-size: 24rpx;
  color: var(--text-gray);
}

.express-actions {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
}
