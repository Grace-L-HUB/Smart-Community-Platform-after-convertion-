<view class="container">
  <view class="header-tip">
    <text class="title">绑定房屋</text>
    <text class="desc">系统将校验您的业主身份，审核通过后可享受业主权益</text>
  </view>

  <view class="form-card">
    <van-cell-group border="{{ false }}">
      <van-field
        value="{{ communityName }}"
        label="当前社区"
        readonly
      />
      
      <van-field
        value="{{ building }}"
        label="楼栋"
        placeholder="请选择楼栋"
        readonly
        is-link
        bind:tap="showBuildingPicker"
      />
      
      <van-field
        value="{{ unit }}"
        label="单元"
        placeholder="请选择单元"
        readonly
        is-link
        bind:tap="showUnitPicker"
      />
      
      <van-field
        value="{{ room }}"
        label="房号"
        placeholder="请选择房号"
        readonly
        is-link
        bind:tap="showRoomPicker"
      />

      <van-field
        value="{{ identity }}"
        label="申请身份"
        placeholder="请选择申请身份"
        readonly
        is-link
        bind:tap="showIdentityPicker"
      />

      <van-field
        value="{{ name }}"
        label="申请人姓名"
        placeholder="请输入申请人姓名"
        bind:input="onNameChange"
      />
      
      <van-field
        value="{{ phone }}"
        label="手机号"
        placeholder="请输入预留手机号"
        type="number"
        maxlength="11"
        bind:input="onPhoneChange"
      />

      <!-- 身份证号 -->
      <van-field
        value="{{ idCard }}"
        label="身份证号"
        placeholder="请输入身份证号码"
        maxlength="18"
        bind:input="onIdCardChange"
      />
    </van-cell-group>

    <view class="btn-area">
      <van-button type="primary" block round bind:tap="onSubmit">提交审核</van-button>
    </view>
  </view>

  <!-- Pickers (Mock) -->
  <van-popup show="{{ showPicker }}" position="bottom" round>
    <van-picker 
      show-toolbar 
      title="{{ pickerTitle }}"
      columns="{{ currentColumns }}" 
      bind:cancel="onPickerCancel" 
      bind:confirm="onPickerConfirm" 
    />
  </van-popup>
</view>
