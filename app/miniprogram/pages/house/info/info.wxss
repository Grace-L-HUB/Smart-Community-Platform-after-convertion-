.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.info-card {
  background: linear-gradient(135deg, #1989fa, #4fc3f7);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(25, 137, 250, 0.2);
}

.card-header {
  display: flex;
  align-items: center;
  color: white;
}

.house-icon {
  margin-right: 20rpx;
}

.house-title {
  flex: 1;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.status-tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.status-text {
  font-size: 24rpx;
  color: white;
}

.detail-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  padding: 30rpx 30rpx 10rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.action-buttons {
  padding: 20rpx 0;
}

.action-btn {
  margin-bottom: 20rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #969799;
}