<view class="container">
  <view class="header-area">
    <van-search value="{{ value }}" placeholder="搜索商品" shape="round" background="#fff" />
    <van-dropdown-menu>
      <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
      <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
    </van-dropdown-menu>
  </view>

  <view class="goods-list">
    <block wx:for="{{ goodsList }}" wx:key="id">
      <van-card
        price="{{ item.price }}"
        desc="{{ item.desc }}"
        title="{{ item.title }}"
        thumb="{{ item.thumb }}"
        tag="{{ item.tag }}"
        lazy-load
      >
        <view slot="tags">
           <van-tag plain type="danger" wx:if="{{item.isNew}}">99新</van-tag>
           <van-tag plain type="primary" wx:else>自提</van-tag>
        </view>
        <view slot="footer">
          <van-button size="mini" icon="chat-o">联系卖家</van-button>
          <van-button size="mini" type="danger">想要</van-button>
        </view>
      </van-card>
      <view class="spacer"></view>
    </block>
  </view>
</view>
