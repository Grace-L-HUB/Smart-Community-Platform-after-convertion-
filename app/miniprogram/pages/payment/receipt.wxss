/* pages/payment/receipt.wxss */

.receipt-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading {
  text-align: center;
  margin-top: 200rpx;
}

.receipt-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.receipt-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  overflow: hidden;
  position: relative;
}

/* 凭证头部 */
.receipt-header {
  background: linear-gradient(135deg, #2979FF 0%, #1976D2 100%);
  color: white;
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
  position: relative;
}

.receipt-header::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  right: 0;
  height: 20rpx;
  background: white;
  border-radius: 50% 50% 0 0;
}

.receipt-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.receipt-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.receipt-number {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 凭证主体 */
.receipt-body {
  padding: 30rpx;
}

.info-section {
  margin-bottom: 30rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #E0E0E0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row.highlight {
  background-color: #F3F8FF;
  margin: 0 -20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  border: 2rpx solid #E3F2FD;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 160rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  text-align: right;
}

.info-value.amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #2979FF;
}

/* 凭证底部 */
.receipt-footer {
  padding: 30rpx;
  background: #FAFAFA;
  border-top: 1rpx solid #E0E0E0;
}

.seal-container {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.seal {
  width: 150rpx;
  height: 150rpx;
  border: 4rpx solid #FF5722;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  position: relative;
}

.seal-text {
  font-size: 24rpx;
  color: #FF5722;
  font-weight: bold;
  text-align: center;
  line-height: 1.2;
}

.seal-status {
  font-size: 18rpx;
  color: #FF5722;
  margin-top: 10rpx;
}

.generate-time {
  text-align: center;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #999;
  line-height: 1.4;
}

/* 操作按钮 */
.receipt-actions {
  padding: 20rpx 30rpx;
  text-align: center;
  border-top: 1rpx solid #E0E0E0;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #E0E0E0;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  safe-area-inset-bottom: 20rpx;
}

.bottom-actions .van-button {
  flex: 1;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-state .van-button {
  margin-top: 40rpx;
  width: 200rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .receipt-container {
    padding: 15rpx;
  }
  
  .receipt-header {
    padding: 30rpx 20rpx 20rpx;
  }
  
  .receipt-title {
    font-size: 32rpx;
  }
  
  .receipt-body {
    padding: 20rpx;
  }
}

/* 打印友好样式 */
@media print {
  .receipt-actions,
  .bottom-actions {
    display: none;
  }
  
  .receipt-card {
    box-shadow: none;
    border: 1px solid #ccc;
  }
}
