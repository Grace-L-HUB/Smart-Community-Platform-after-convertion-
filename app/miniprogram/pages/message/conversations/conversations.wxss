.container {
  min-height: 100vh;
  background-color: #f7f8fa;
}

.conversation-list {
  padding-top: 16rpx;
}

.conversation-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  flex-shrink: 0;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: #07c160;
  color: #fff;
  font-size: 36rpx;
  border-radius: 50%;
}

.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background-color: #ee0a24;
  color: #fff;
  font-size: 20rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 18rpx;
}

.content-section {
  flex: 1;
  overflow: hidden;
}

.top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.time {
  font-size: 24rpx;
  color: #969799;
}

.bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.last-message {
  flex: 1;
  font-size: 28rpx;
  color: #969799;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-tag {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  margin-left: 16rpx;
  background-color: #f0f9f4;
  color: #07c160;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.product-tag text {
  margin-left: 4rpx;
}

.empty-state {
  padding-top: 200rpx;
}