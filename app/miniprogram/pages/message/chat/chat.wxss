.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
}

.message-list {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.message-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.message-item.me {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #ddd;
  margin: 0 16rpx;
}

.content {
  max-width: 60%;
}

.bubble {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.other .bubble {
  background-color: #fff;
  color: #333;
}

.me .bubble {
  background-color: #07c160;
  color: #fff;
}

.input-area {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
}
