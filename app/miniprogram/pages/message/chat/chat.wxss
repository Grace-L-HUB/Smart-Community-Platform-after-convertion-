.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f2f2f2;
}

/* 商品信息栏 */
.product-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title {
  font-size: 28rpx;
  color: #323233;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 24rpx;
  color: #ee0a24;
  margin-top: 4rpx;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.message-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.message-item.self {
  justify-content: flex-end;
}

.message-content {
  max-width: 70%;
}

.self-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 70rpx;
}

.nickname {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
  display: block;
}

.self-nickname {
  text-align: right;
}

.bubble {
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.5;
  word-break: break-all;
  background-color: #fff;
  color: #323233;
}

.self-bubble {
  background-color: #07c160;
  color: #fff;
}

.empty-tip {
  text-align: center;
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

/* 输入框 */
.input-area {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.input {
  flex: 1;
  height: 72rpx;
  background-color: #f7f8fa;
  border-radius: 36rpx;
  padding: 0 24rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
}

.input-placeholder {
  color: #c8c9cc;
}

/* 发送按钮 */
.send-button {
  width: 120rpx !important;
}