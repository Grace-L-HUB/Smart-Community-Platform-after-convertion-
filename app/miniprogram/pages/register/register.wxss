.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 60rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.register-box {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.register-header {
  text-align: center;
  margin-bottom: 50rpx;
}

.register-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.register-desc {
  display: block;
  font-size: 28rpx;
  color: #999999;
}

.form-area {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.code-group {
  position: relative;
}

.code-group .input {
  padding-right: 180rpx;
}

.get-code-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 24rpx;
  background: #667eea;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 24rpx;
  z-index: 10;
  cursor: pointer;
}

.get-code-btn.disabled {
  background: #cccccc;
  color: #ffffff;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f7f8fa;
  padding: 0;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
}

.nickname-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 20rpx;
}

.btn-primary::after {
  border: none;
}

.login-link {
  text-align: center;
  margin-top: 20rpx;
}

.login-link text {
  font-size: 28rpx;
  color: #667eea;
}
