/* pages/coupon/list/list.wxss */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  padding: 200rpx 0;
  text-align: center;
}

.error-container {
  padding: 100rpx 30rpx;
}

.empty-container {
  padding: 100rpx 30rpx;
}

.coupon-list {
  padding: 20rpx;
}

.coupon-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.coupon-disabled {
  opacity: 0.6;
}

.coupon-main {
  display: flex;
  padding: 30rpx;
  position: relative;
}

/* 左侧金额区域 */
.coupon-amount {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 10rpx;
  margin-right: 20rpx;
}

.amount-symbol {
  font-size: 24rpx;
  line-height: 1;
}

.amount-value {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
  margin: 5rpx 0;
}

.amount-condition {
  font-size: 20rpx;
  opacity: 0.9;
  text-align: center;
}

/* 中间信息区域 */
.coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.coupon-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.coupon-merchant {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.merchant-name {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.coupon-time {
  font-size: 22rpx;
  color: #999;
}

/* 右侧操作区域 */
.coupon-action {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border: 2rpx solid #07c160;
  border-radius: 12rpx;
  background: #f0fff4;
}

.action-text {
  font-size: 22rpx;
  color: #07c160;
  margin-top: 8rpx;
}

.status-tag {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  text-align: center;
}

.status-tag.used {
  background: #f0f0f0;
  color: #999;
}

.status-tag.expired {
  background: #ffebee;
  color: #f44336;
}

/* 底部区域 */
.coupon-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #eee;
}

.verification-code {
  font-size: 24rpx;
  color: #666;
  font-family: monospace;
}

.used-time {
  font-size: 24rpx;
  color: #999;
}

/* 优惠券卡片装饰 */
.coupon-card::before {
  content: '';
  position: absolute;
  left: 190rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent 0,
    transparent 8rpx,
    #ddd 8rpx,
    #ddd 16rpx
  );
}
