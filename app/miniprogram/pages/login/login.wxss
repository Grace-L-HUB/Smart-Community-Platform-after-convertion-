/* pages/login/login.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #f0fff4 0%, #e6f7ff 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  box-sizing: border-box;
}

/* Optional: Add a subtle patterned overlay or shape if possible, but CSS gradient is good for now. */

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  z-index: 10;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 2rpx;
}

.login-box,
.profile-box {
  background: rgba(255, 255, 255, 0.95);
  padding: 50rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.06);
  backdrop-filter: blur(10px);
  z-index: 10;
  margin: 0 10rpx;
}

.input-group {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 16rpx;
  font-weight: 500;
  padding-left: 8rpx;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input:focus {
  background: #fff;
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.code-group {
  position: relative;
}

.code-group .input {
  padding-right: 220rpx;
}

.get-code-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(14rpx); /* Correction for label offset, tricky with absolute top 50% relative to group */
  /* Better approach: */
  top: auto; 
  bottom: 24rpx; /* (96 - 48)/2 approx */
  z-index: 2;
  font-size: 28rpx;
  color: #07c160;
  padding: 10rpx 24rpx;
  font-weight: 500;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 24rpx;
}

.get-code-btn:active {
  background: rgba(7, 193, 96, 0.2);
}

.btn-primary {
  background: linear-gradient(135deg, #2ecc71 0%, #07c160 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  width: 100% !important;
  margin-top: 50rpx;
  padding: 0;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: opacity 0.2s;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.99);
}

.btn-secondary {
  background: #f0f2f5;
  color: #666;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  width: 100% !important;
  margin-top: 30rpx;
  padding: 0;
}

.divider {
  display: flex;
  align-items: center;
  margin: 70rpx 0 50rpx;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #eee;
}

.text {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #bbb;
}

.social-login {
  display: flex;
  justify-content: center;
}

.btn-wechat {
  background: #fff;
  color: #07c160;
  font-size: 32rpx;
  border: 2rpx solid #07c160;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 90rpx;
  width: 100% !important;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.1);
}

.btn-wechat .icon {
  margin-right: 12rpx;
  /* Add icon if available, or just text */
}

/* Profile Section Styles */
.profile-header {
  text-align: center;
  margin-bottom: 50rpx;
}

.profile-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.profile-desc {
  font-size: 28rpx;
  color: #999;
}

.avatar-wrapper {
  padding: 0;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50%;
  margin: 0 auto 50rpx;
  position: relative;
  background: #f0f0f0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  background: #07c160;
  color: #fff;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 52rpx;
  font-size: 36rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.avatar-tip {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #888;
  margin-top: -30rpx;
  margin-bottom: 50rpx;
}

.nickname-section {
  margin-bottom: 70rpx;
}

