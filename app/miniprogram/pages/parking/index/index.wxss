.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #969799;
}

.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.empty-text {
  margin: 40rpx 0;
  font-size: 28rpx;
  color: #969799;
}

.parking-list {
  padding: 20rpx 0;
}

.parking-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.parking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.parking-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.parking-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  background-color: #07c160;
  color: #fff;
}

.parking-status.pending {
  background-color: #ff976a;
}

.parking-status.rejected {
  background-color: #ee0a24;
}

.parking-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #646566;
}

.parking-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
}