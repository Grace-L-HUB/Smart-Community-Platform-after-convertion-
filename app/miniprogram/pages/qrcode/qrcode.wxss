.container {
  padding: 40rpx 24rpx;
  text-align: center;
}

.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.qrcode-wrapper {
  width: 500rpx;
  height: 500rpx;
  background: #fff;
  border-radius: var(--radius-lg);
  padding: 40rpx;
  box-shadow: var(--shadow-md);
  margin-bottom: 32rpx;
}

.qrcode-image {
  width: 100%;
  height: 100%;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.qrcode-desc {
  font-size: 26rpx;
  color: var(--text-gray);
}

.info-section {
  margin-bottom: 32rpx;
}

.actions-section {
  padding: 0 24rpx;
}
