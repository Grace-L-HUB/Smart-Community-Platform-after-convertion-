/* pages/shop/detail/detail.wxss */
.container {
  background-color: var(--bg-color);
  padding-bottom: 120rpx;
}

.shop-header {
  position: relative;
  margin-bottom: 20rpx;
}

.shop-bg {
  width: 100%;
  height: 300rpx;
}

.shop-info-card {
  position: relative;
  margin: -80rpx 20rpx 0;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--shadow-md);
  z-index: 10;
}

.shop-main {
  display: flex;
  margin-bottom: 20rpx;
}

.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  border: 1rpx solid #eee;
}

.shop-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.shop-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.shop-rate {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.rate-score {
  color: #ff976a;
  font-weight: bold;
  margin: 0 10rpx;
}

.shop-tags van-tag {
  margin-right: 10rpx;
}

.shop-address {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.address-text {
  flex: 1;
  margin: 0 10rpx;
}

.phone-icon {
  font-size: 36rpx;
  color: var(--primary-color);
  padding: 10rpx;
}

.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.coupon-scroll {
  white-space: nowrap;
}

.coupon-item {
  display: inline-flex;
  width: 300rpx;
  height: 120rpx;
  background: #fff5f5;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #ffecec;
}

.coupon-left {
  width: 120rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ff976a;
  border-right: 2rpx dashed #ff976a;
}

.symbol {
  font-size: 24rpx;
}

.amount {
  font-size: 40rpx;
  font-weight: bold;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

.condition {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.loading-container {
  padding: 200rpx 0;
  text-align: center;
}

.error-container {
  padding: 100rpx 30rpx;
}

.products-loading {
  padding: 100rpx 0;
  text-align: center;
}

.products-error {
  padding: 50rpx 30rpx;
}

.products-container {
  padding: 20rpx 30rpx;
}

.empty-products {
  padding: 100rpx 0;
}

.product-actions {
  display: flex;
  gap: 20rpx;
}

.service-slots {
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  margin-top: 20rpx;
  border-radius: 12rpx;
}

.slots-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.slot-tag {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.empty-comment {
  padding: 100rpx;
  text-align: center;
  color: #999;
}
