.cart-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120px;
}

.loading-container {
  padding: 200rpx 0;
  text-align: center;
}

.empty-container {
  padding: 150rpx 0;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebedf0;
}

.cart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.clear-btn {
  font-size: 26rpx;
  color: #969799;
}

.merchant-group {
  margin-top: 20rpx;
  background-color: #fff;
}

.merchant-header {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.merchant-name {
  margin-left: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #323233;
}

.merchant-items {
  padding: 0 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #ebedf0;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
  background-color: #f7f8fa;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.product-name {
  font-size: 28rpx;
  color: #323233;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #ee0a24;
  font-weight: bold;
}

.delete-btn {
  padding: 10rpx;
  margin-left: 10rpx;
  color: #969799;
}

.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #ebedf0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.checkout-left {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 28rpx;
  color: #323233;
}

.total-price {
  font-size: 40rpx;
  color: #ee0a24;
  font-weight: bold;
  margin-left: 8rpx;
}
