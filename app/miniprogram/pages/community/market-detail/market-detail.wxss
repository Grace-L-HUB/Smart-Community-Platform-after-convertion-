.container {
  padding-bottom: 120rpx;
}

.goods-swiper {
  width: 100%;
  height: 750rpx;
  background: #f5f5f5;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.price-section {
  margin: 0 24rpx 24rpx;
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.price {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff4444;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  line-height: 1.5;
}

.seller-section {
  margin: 0 24rpx 24rpx;
}

.seller-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.seller-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.seller-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.seller-location {
  font-size: 24rpx;
  color: var(--text-gray);
}

.seller-actions {
  display: flex;
  gap: 16rpx;
}

.desc-section,
.details-section {
  margin: 0 24rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 20rpx;
}

.desc-text {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.8;
  white-space: pre-wrap;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.action-text {
  font-size: 20rpx;
  color: var(--text-gray);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}
