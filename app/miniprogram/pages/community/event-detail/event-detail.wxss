.container {
  padding-bottom: 120rpx;
}

.event-banner {
  width: 100%;
  height: 400rpx;
  background: #f5f5f5;
}

.event-info {
  margin: 24rpx;
}

.event-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-text {
  font-size: 26rpx;
  color: var(--text-main);
}

.tags-row {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.desc-section,
.schedule-section,
.requirements-section,
.enrolled-section,
.organizer-section {
  margin: 0 24rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.count-text {
  font-size: 24rpx;
  color: var(--text-gray);
}

.desc-text,
.requirements-text {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.8;
  white-space: pre-wrap;
}

.schedule-item {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.schedule-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.schedule-time {
  font-size: 26rpx;
  font-weight: 600;
  color: #07c160;
  min-width: 120rpx;
}

.schedule-content {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-main);
  line-height: 1.6;
}

.enrolled-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.enrolled-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  border: 2rpx solid #fff;
}

.more-users {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: var(--text-gray);
}

.empty-enrolled {
  text-align: center;
  padding: 40rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: var(--text-gray);
}

.organizer-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.organizer-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.organizer-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.organizer-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.organizer-desc {
  font-size: 24rpx;
  color: var(--text-gray);
  line-height: 1.5;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.action-text {
  font-size: 20rpx;
  color: var(--text-gray);
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

/* 新增样式 */
.progress-section {
  margin-top: 24rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-gray);
  margin-bottom: 12rpx;
  display: block;
}

.status-section {
  background: #f8fffe;
  border: 2rpx solid #e6fffa;
  margin: 0 24rpx 24rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-label {
  font-size: 28rpx;
  color: var(--text-gray);
  min-width: 120rpx;
}

/* 更新参与者列表样式 */
.enrolled-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.participant-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.participant-info {
  flex: 1;
}

.participant-name {
  font-size: 28rpx;
  color: var(--text-main);
}
