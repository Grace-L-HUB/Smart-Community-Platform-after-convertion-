.container {
  padding-bottom: 140rpx;
  min-height: 100vh;
  background: #f7f8fa;
}

/* Banner */
.event-banner {
  width: 100%;
  height: 400rpx;
  background: #f5f5f5;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Card */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* Event Info */
.event-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #323233;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-text {
  font-size: 26rpx;
  color: #646566;
}

.tags-row {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

/* Progress */
.progress-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #969799;
}

.progress-count {
  font-size: 24rpx;
  color: #07c160;
  font-weight: 600;
}

/* Description */
.desc-section {
  margin: 0 24rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 20rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* Organizer */
.organizer-section {
  margin: 0 24rpx 24rpx;
}

.organizer-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.organizer-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.organizer-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.organizer-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
}

.organizer-time {
  font-size: 24rpx;
  color: #969799;
}

/* Action Bar */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

/* Loading */
.van-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
