.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.content-input {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid transparent;
}

.tag.active {
  color: #07c160;
  background: #eaffee;
  border-color: #07c160;
}

.submit-btn-container {
  margin-top: 48rpx;
}
