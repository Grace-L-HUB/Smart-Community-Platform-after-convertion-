/* pages/community/community.wxss */
.p-30 {
  padding: 30rpx;
}

.community-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #eee;
}

.avatar-placeholder {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #faae42;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.content {
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.post-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.price-row {
  margin-top: 10rpx;
}

.price {
  color: #ee0a24;
  font-size: 32rpx;
  font-weight: bold;
}

.tags {
  margin-bottom: 16rpx;
}

.tags .van-tag {
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.meta-info {
  margin-bottom: 16rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 16rpx;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
}

.event-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  margin-bottom: 30rpx;
}

.event-banner {
  width: 100%;
  height: 280rpx;
}

.event-info {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.event-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.event-time, .event-loc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.fab-btn {
  position: fixed;
  bottom: 160rpx; /* Above TabBar + margin */
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--primary-color);
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

/* 新增：活动卡片状态样式 */
.event-card .event-info .event-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 16rpx 0;
}

.event-card .event-info .participants-count {
  font-size: 22rpx;
  color: var(--text-gray);
}
