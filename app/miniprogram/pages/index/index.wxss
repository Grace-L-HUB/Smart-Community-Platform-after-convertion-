/* pages/index/index.wxss */
.container {
  padding-bottom: 100rpx;
}

.header-section {
  background: var(--primary-gradient);
  padding: 40rpx 40rpx 100rpx; /* Extra bottom padding for overlap */
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.user-greeting {
  display: flex;
  flex-direction: column;
}

.greeting-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.weather-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.identity-card {
  margin: -60rpx 30rpx 30rpx; /* Negative margin to overlap header */
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 10;
}

.qr-code-area {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-text {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666;
}

.identity-info {
  width: 100%;
  text-align: center;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.community-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.user-role {
  display: block;
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-top: 8rpx;
}

.notice-bar {
  margin: 0 30rpx 30rpx !important;
  border-radius: 12rpx;
  box-shadow: var(--shadow-sm);
}

.section-title {
  padding: 0 30rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.edit-btn text {
  font-size: 24rpx;
}
