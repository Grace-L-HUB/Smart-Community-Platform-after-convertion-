<view class="container">
  <!-- Header Section -->
  <view class="header-section">
    <view class="user-greeting">
      <text class="greeting-text">早安，{{userInfo.nickName || '业主'}}</text>
      <text class="weather-text">{{weatherInfo.condition}} {{weatherInfo.temperature}}°C</text>
    </view>
    <view class="notification-icon">
      <van-icon name="bell" size="24px" color="#fff" />
    </view>
  </view>

  <!-- Identity Card Section -->
  <view class="card identity-card">
    <view class="qr-code-area" bindtap="showQRCode">
      <van-icon name="qr" size="64px" color="#333" />
      <text class="qr-text">点击出示身份码</text>
    </view>
    <view class="identity-info">
      <text class="community-name">{{communityInfo.name || '暂未绑定社区'}}</text>
      <text class="user-role">已认证业主</text>
    </view>
  </view>

  <!-- Notice Bar -->
  <van-notice-bar
    wx:if="{{showNotice}}"
    left-icon="volume-o"
    text="{{latestNotice.title}}：{{latestNotice.content}}"
    custom-class="notice-bar"
    background="#fff"
    color="#f57c00"
    bindtap="onNoticeClick"
  />

  <!-- Quick Actions -->
  <view class="section-title">快捷服务</view>
  <van-grid column-num="4" border="{{ false }}" gutter="10">
    <van-grid-item icon="setting-o" text="报事报修" bind:click="onQuickAction" data-action="repair" />
    <van-grid-item icon="friends-o" text="访客邀请" link-type="navigateTo" url="/pages/services/visitor/visitor" />
    <van-grid-item icon="logistics" text="快递代收" link-type="navigateTo" url="/pages/express/express" />
    <van-grid-item icon="phone-o" text="常用电话" bind:click="onQuickAction" data-action="call" />
  </van-grid>
</view>
