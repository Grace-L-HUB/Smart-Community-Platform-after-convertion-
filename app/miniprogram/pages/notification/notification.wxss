.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.notification-list {
  padding-bottom: 32rpx;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.unread-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.unread-info .count {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4444;
}

.unread-info .label {
  font-size: 28rpx;
  color: #999;
}

.notification-item {
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 32rpx;
  margin: 0 32rpx 16rpx;
  background-color: #fff;
  border-radius: 16rpx;
  transition: background-color 0.3s;
}

.notification-item:active {
  background-color: #f8f8f8;
}

.unread-dot {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #ff4444;
  border-radius: 50%;
}

.icon-wrapper {
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.content-wrapper {
  flex: 1;
  min-width: 0;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.unread-tag {
  flex-shrink: 0;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #ff4444;
  border-radius: 8rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.time {
  font-size: 24rpx;
  color: #999;
}